<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <main class="body-detail">
        <h3 class="slogan-main-detalle">CREAR PRODUCTO</h3>
        <form action="/products/create" method="post" class="form-producto">

        <div class="form-producto-imagen">
            <label class="label-seleccion-imagen" for="imagen">Seleccion de imagen
            <input class="" type="file" id="imagen" name="imagen" accept="image/*"<% products.imagen ? products.imagen : "default.webp" %>>
            <img src="/images/default.webp"  class="form-imagen">
        </label> 
        </div>

        <div class="form-precio-producto">
            <label class="label-form-precio" for="nombre">Nombre del producto</label>
             <input class="input-form-precio" type="text" id="nombre" name="nombre">
        </div> 

         <div class="form-descripcion-producto">
            <label class="label-form-descripcion" for="descripcion">Descripcion del producto</label>
            <input class="" name="descripcion" id="descripcion" cols="" rows=""></input>
         </div>

         <div class="horario-producto">
            <label class="label-form-horario" for="descripcion">horarios del producto</label>
            <select class="textarea-horario" name="descripcion" id="descripcion" cols="" rows="">
                <option value=""> 10 a 12</option>
                <option value=""> 14 a 16</option>
                <option value=""> 16 a 17</option>

            </select>
         </div>

         <div class="form-precio-producto">
           <label class="label-form-precio" for="precio">Precio del producto</label>
            <input class="input-form-precio" type="number" id="precio" name="precio">
         </div>

        <button type="submit">guradar</button>
           
             
   </form>

        

    </main>
    <%- include("../partials/footerdetail.ejs") %>
</body>
</html>