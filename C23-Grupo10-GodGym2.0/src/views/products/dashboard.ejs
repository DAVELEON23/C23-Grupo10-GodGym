<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <main class="body-detail">
        <div>
            <a href="/products/productCreate">Crear producto</a>

        </div>
        <h3 class="slogan-main-detalle"> Lista de Actividades </h3>
        
                <% products.forEach(product =>{ %>
            <h3 class="nombre-producto"> Entrenamiento : <%= product.nombre %></h3>
        <article class="articulo-producto">
            <img src="/images/<%= product.imagen %>"  class="detalleProduct-imagen dashboard_img"> 
            <div class="caja-producto dashboard_caja-producto">
            <!-- <p class="info-producto"><%= product.informacion %></p> -->
                
                <!-- <p class="horarios-producto"><%= product.horario %></p> -->
                
                <div class="seccion-tablet-info dashboard-seccion-tablet-info">
                
                <div class="precio-producto_dashboard-box">
                    <p class="precio-producto"><%= product.precio %></p>
                </div>
                <div class="box_dashboard_option">
                    <a class="icon_edit_dashboard" href="/products/detail/<%= product.id %>"
                    ><i class="fa-regular fa-address-book"></i>
                    </a>
  
                    <a class="icon_edit_dashboard" href="/products/productEdit/<%= product.id %>"
                    ><i class="fa-solid fa-highlighter"></i>
                    </a>
  
                    <a class="icon_edit_dashboard" href="/products/delete/<%= product.id %>"
                    ><i class="fa-regular fa-trash-can"></i>
                    </a>
                    </div>
        </div>
                </div>
                
        </article>
        <% })  %>

    </main>
    <%- include("../partials/footerdetail.ejs") %>
</body>
</html>